/* Import nib */
@import 'nib'



html
  width 100%
  height 100%

body
  width 100%
  height 100%
  margin 0
  padding 0
  #innerContainer
    height 100%
    width 100%
    position absolute
    top 0
    left 0
    background #ccc
    transition: 400ms cubic-bezier(0.165, 0.840, 0.440, 1.000)
    &.navi-select
      transform translateX(-100%)
    &.navi-export
      transform translateX(-200%)
    > div
      width 100%
      height 100%
      position absolute
      &#welcome
        left 0
      &#select
        left 100%
        .imfile
          background #FFF
          border solid 1px #666
          width 66vw
          height 66vw
          position absolute
          left 50%
          margin-left -33vw
          margin-top -33vw
          overflow hidden
          cursor pointer
          background-size cover
          background-position center center
          &.hasimage
            > div
              display none
            p
              display none
          &:first-child
            top 25%
          &:last-child
            top 75%
          > div
            border-top solid 1px #666
            position absolute
            top calc(50% - 1px)
            left 50%
            margin-left -100%
            height 0px
            width 200%
            transform rotate(45deg)
            &:nth-child(1)
              transform rotate(-45deg)
          input
            width 100%
            height 100%
            display block
            opacity 0
            cursor pointer
            position absolute
            z-index 3
          p
            position absolute
            top 50%
            left 50%
            color #000
            z-index 2
            margin 0
            padding 0
            width 50%
            margin-left -25%
            margin-top -30px
            text-align center
            font-size 30px
            line-height 24px
            sup
              font-size 14px
      &#export
        left 200%
        #preview
          background #FFF
          border solid 1px #666
          width 66vw
          height 66vw
          position relative
          margin: 20px auto
          background-size cover
          background-position center center